-- Geração de Modelo físico
-- Sql ANSI 2003 - brModelo.

DROP DATABASE IF EXISTS gontijo_calcados;

CREATE DATABASE gontijo_calcados;

USE gontijo_calcados;

CREATE TABLE material (
id int PRIMARY KEY,
nome Varchar(120),
caminho Varchar(120),
caminho2 Varchar(120)
);

CREATE TABLE tinta (
id int PRIMARY KEY,
nome Varchar(120),
caminho Varchar(120)
);

CREATE TABLE tipo_tinta (
id int PRIMARY KEY,
nome Varchar(120)
);

CREATE TABLE adesivo (
id int PRIMARY KEY,
nome Varchar(120),
caminho Varchar(120),
caminho2 Varchar(120)
);

CREATE TABLE solado (
id int PRIMARY KEY,
nome Varchar(120)
);

CREATE TABLE cadarco (
id int PRIMARY KEY,
nome Varchar(120)
);

CREATE TABLE calcado (
id int PRIMARY KEY,
espe_linha Varchar(30),
temp_equi Varchar(30),
cor_linha Varchar(30),
tam_costura Varchar(30),
temp_sec Varchar(30),
reg_equip Varchar(30),
id_tinta Varchar(30),
id_material Varchar(30),
id_cadarco Varchar(30),
id_solado Varchar(30),
id_adesivo Varchar(30),
id_tip_tinta Varchar(30),
data date,
FOREIGN KEY(id_tinta) REFERENCES tinta (id),
FOREIGN KEY(id_material) REFERENCES material (id),
FOREIGN KEY(id_adesivo) REFERENCES adesivo (id),
FOREIGN KEY(id_tip_tinta) REFERENCES tipo_tinta (id),
FOREIGN KEY(id_cadarco) REFERENCES cadarco (id),
FOREIGN KEY(id_solado) REFERENCES solado (id)
);


