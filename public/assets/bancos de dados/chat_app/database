DROP DATABASE IF EXISTS chat_app;

CREATE DATABASE chat_app;

USE chat_app;

CREATE TABLE users (
  id INT AUTO_INCREMENT PRIMARY KEY,
  email_user VARCHAR(300) NOT NULL,
  FOREIGN KEY (email_user) REFERENCES ProductEase.usuario(email)
);

CREATE TABLE messages (
  id INT AUTO_INCREMENT PRIMARY KEY,
  user VARCHAR(100) NOT NULL,
  id_user VARCHAR(300) NOT NULL,
  message TEXT NOT NULL,
  privateChatWith VARCHAR(300) DEFAULT NULL,
  timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  FOREIGN KEY (id_user) REFERENCES users(email_user)
);

CREATE TABLE private_messages (
  id INT AUTO_INCREMENT PRIMARY KEY,
  from_user VARCHAR(300) NOT NULL,
  to_user VARCHAR(300) NOT NULL,
  message TEXT NOT NULL,
  timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  FOREIGN KEY (from_user) REFERENCES users(email_user),
  FOREIGN KEY (to_user) REFERENCES users(email_user)
);

-- Triggers

USE ProductEase;

DELIMITER //

CREATE TRIGGER after_insert_usuario
AFTER INSERT ON usuario
FOR EACH ROW
BEGIN
    -- Insere o e-mail na tabela users do banco de dados chat_app
    INSERT INTO chat_app.users (email_user)
    VALUES (NEW.email);
END;

//

DELIMITER ;
