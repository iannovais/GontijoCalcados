DROP DATABASE IF EXISTS chat_app;

CREATE DATABASE chat_app;

USE chat_app;

CREATE TABLE users (
  id INT AUTO_INCREMENT PRIMARY KEY,
  user_nome VARCHAR(255) NOT NULL,
  email_user VARCHAR(300) NOT NULL,
  FOREIGN KEY (email_user) REFERENCES ProductEase.usuario(email)
);

CREATE TABLE messages (
  id INT AUTO_INCREMENT PRIMARY KEY,
  user VARCHAR(100) NOT NULL,
  id_user VARCHAR(300) NOT NULL,
  message TEXT NOT NULL,
  privateChatWith VARCHAR(300) DEFAULT NULL,
  timestamp DATETIME(3) DEFAULT CURRENT_TIMESTAMP(3),
  FOREIGN KEY (id_user) REFERENCES users(email_user)
);

-- Triggers

USE ProductEase;

DELIMITER //

CREATE TRIGGER after_insert_usuario
AFTER INSERT ON usuario
FOR EACH ROW
BEGIN
    -- Insere o e-mail e o nome do usuário na tabela users do banco de dados chat_app
    INSERT INTO chat_app.users (email_user, user_nome)
    VALUES (NEW.email, NEW.name);
END//

DELIMITER ;

DELIMITER //

CREATE TRIGGER after_update_usuario
AFTER UPDATE ON usuario
FOR EACH ROW
BEGIN
    -- Atualiza o nome do usuário na tabela users do banco de dados chat_app quando o nome é alterado em usuario
    UPDATE chat_app.users
    SET user_nome = NEW.name
    WHERE email_user = NEW.email;
END//

DELIMITER ;
